<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <OutputType>Library</OutputType>
        <IsPackable>true</IsPackable>
        <AssemblyName>TelegramAspNetCoreAuth</AssemblyName>
        <PackageId>TelegramAspNetCoreAuth</PackageId>
        <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
        <Version>$([System.DateTime]::Now.ToString("yyyy.M.d.Hmm"))</Version>
        <AssemblyVersion>$(Version)</AssemblyVersion>
        <FileVersion>$(Version)</FileVersion>
        <Description>Implement Telegram authentication for ASP.NET applications (.NET 6+). MIT License</Description>
        <Authors>Denis Balashov</Authors>
        <RepositoryUrl>https://github.com/DBalashov/TelegramAspNetCoreAuth</RepositoryUrl>
        <Copyright>Denis Balashov</Copyright>
        <PackageTags>c#, telegram, api</PackageTags>
        <TargetFrameworks>net6.0;net8.0</TargetFrameworks>
    </PropertyGroup>

</Project>